---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<BaseLayout
	title="Katedra chemii analitycznej i metalurgii chemicznej"
	mainHeading="Katedra Chemii Analitycznej i Metalurgii Chemicznej"
	centered={true}
>
	<div class="main__building-content">
		<picture>
			<source srcset="img/building.webp">
			<img
				src="/Website_ZChA/img/building.jpg"
				alt="Zdjęcie budynku A3, będącego głównym budynkiem Katedry Chemii Analitycznej i Metalurgii Chemicznej"
				class="main__building-img"
			/>
		</picture>
		<p class="main__building-img-overlay" aria-hidden="true">
			Katedra Chemii Analitycznej i Metalurgii Chemicznej - budynek A3
		</p>
	</div>
	<div class="main__info">
		<p class="main__info-first">
			Kierownik Katedry:
			<span class="main__info-first--bold">Prof. dr hab. inż. Paweł Pohl</span>
		</p>
		<address>
			<p>Katedra Chemii Analitycznej i Metalurgii Chemicznej (K14W03D10)</p>
			<p>Wydział Chemiczny</p>
			<p>Politechnika Wrocławska</p>
			<p aria-hidden="true">Wyb. Wyspiańskiego 27</p>
			<p class="sr-only">Wybrzeże Wyspiańskiego 27</p>
			<p>53-370 Wrocław</p>
			<p>tel. 071 320 24 94</p>
		</address>
	</div>
</BaseLayout>

<style lang="scss">
	.main {
		&__building {
			&-content {
				position: relative;
				margin-inline: auto;
				max-width: min(100%, 600px);
			}

			&-img {
				&-overlay {
					position: absolute;
					inset: auto 0 0;
					padding: clamp(.5rem, 3vw + .3rem, 2rem);
					background-color: rgb(0 0 0 /.8);
					color: var(--white-color);
				}
			}
		}

		&__info {
			&-first {
				margin-block: 1rem;

				&--bold {
					font-weight: 700;
				}
			}

			.sr-only {
				position: absolute;
				width: .0001px;
				overflow: hidden;
			}
		}
	}

	@media (hover: hover) {
		.main {
			&__building {
				&-content:hover &-img {
					&-overlay {
						opacity: 1;
					}
				}

				&-img {
					&-overlay {
						opacity: 0;
						transition: opacity .5s;
					}
				}
			}
		}
	}
</style>
